<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header con título y fecha -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="App Icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/widget_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juan Tracker"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/widget_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sin entreno hoy"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <Button
            android:id="@+id/widget_action_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="ENTRENAR"
            android:textSize="12sp"
            android:backgroundTint="#DA5A2A"
            android:textColor="@android:color/white"
            android:paddingHorizontal="16dp" />
    </LinearLayout>

    <!-- Lista de ejercicios (máx 3 visibles) -->
    <LinearLayout
        android:id="@+id/widget_exercises_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/widget_exercise_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Press de banca 5x5"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/widget_exercise_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Sentadilla 3x8"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/widget_exercise_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• +3 más..."
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:maxLines="1"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Empty state -->
    <TextView
        android:id="@+id/widget_empty_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No hay entrenamiento programado para hoy"
        android:textColor="@android:color/darker_gray"
        android:textSize="13sp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

</LinearLayout>
